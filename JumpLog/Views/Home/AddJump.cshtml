@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Add Jump";
}

@if (SignInManager.IsSignedIn(User))
{
    <h1>Add Jump</h1>

    <div class="form-container">
        <form action="/" class="add-person-form" method="post">
            <input type="text" name="date-of-jump" value="" required placeholder="Date of Jump" />
            <input type="text" name="type-of-jump" value="" required placeholder="Type of Jump" />
            <input type="text" name="aircraft" value="" required placeholder="Type of Aircraft" />
            <input type="text" name="dropzone" value="" required placeholder="Dropzone" />
            <input type="text" name="parachute" value="" required placeholder="Type of Parachute" />
            <input type="text" name="duty" value="" required placeholder="Duty (if applicable)" />
            <button>Submit</button>
        </form>
    </div>
}
else
{
    <h3>Need to be logged in to view this page.</h3>
}